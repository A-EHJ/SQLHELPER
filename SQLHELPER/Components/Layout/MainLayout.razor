@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<div class="app-shell d-flex">
    <aside class="app-sidebar text-white">
        <div class="sidebar-header px-3 py-3 border-bottom border-secondary">
            <div class="d-flex align-items-center justify-content-between">
                <span class="fw-semibold">SQLHELPER</span>
                <span class="badge bg-info text-dark">console</span>
            </div>
            <div class="small text-muted mt-1">Database productivity toolkit</div>
        </div>
        <NavMenu />
    </aside>

    <div class="flex-grow-1 d-flex flex-column min-vh-100">
        <header class="app-topbar navbar navbar-expand bg-white border-bottom shadow-sm">
            <div class="container-fluid">
                <div class="d-flex align-items-center gap-3">
                    <span class="navbar-brand mb-0 h5">SQL Helper</span>
                    <span class="text-muted small d-none d-md-inline">Operational workspace</span>
                </div>
                <div class="d-flex align-items-center gap-2">
                    <button class="btn btn-outline-primary btn-sm" @onclick='() => NavigationManager.NavigateTo("/queries/editor")'>New query</button>
                    <button class="btn btn-outline-secondary btn-sm" @onclick='() => NavigationManager.NavigateTo("/notes")'>Notes</button>
                </div>
            </div>
        </header>
        <main class="flex-grow-1">
            <div class="container-fluid py-4">
                @Body
            </div>
        </main>
    </div>
</div>

<Toasts />
