<div class="modal fade @(Visible ? "show d-block" : string.Empty)" tabindex="-1" style="background-color: rgba(0,0,0,.45);" role="dialog" aria-modal="true" aria-hidden="@(!Visible)">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">@Title</h5>
                <button type="button" class="btn-close btn-close-white" aria-label="Close" @onclick="OnCancel"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">@Message</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="OnCancel">Cancel</button>
                <button class="btn btn-danger" @onclick="OnConfirm">@ConfirmText</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "Confirm action";
    [Parameter] public string Message { get; set; } = "This operation cannot be undone.";
    [Parameter] public string ConfirmText { get; set; } = "Confirm";
    [Parameter] public bool Visible { get; set; }
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
}
