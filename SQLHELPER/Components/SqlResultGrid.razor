@if (IsBusy)
{
    <div class="alert alert-info d-flex align-items-center" role="alert">
        <span class="spinner-border spinner-border-sm me-2" aria-hidden="true"></span>
        <div>Executing query...</div>
    </div>
}
else if (Result is null)
{
    <div class="alert alert-secondary">Run a query to see results.</div>
}
else if (!Result.Success)
{
    <div class="alert alert-danger">
        <div class="fw-semibold">@Result.Message</div>
        @if (!string.IsNullOrWhiteSpace(Result.Error))
        {
            <div class="small">@Result.Error</div>
        }
    </div>
}
else if (!Result.ResultSets.Any() || Result.ResultSets.All(r => r.Rows.Count == 0))
{
    <div class="alert alert-warning">No rows returned. @Result.Message</div>
}
else
{
    var index = 1;
    foreach (var set in Result.ResultSets)
    {
        <div class="mb-3">
            @if (Result.ResultSets.Count > 1)
            {
                <div class="small text-muted mb-1">Result set @index</div>
            }
            <div class="table-responsive">
                <table class="table table-striped table-sm align-middle">
                    <thead>
                        <tr>
                            @foreach (var column in set.Columns)
                            {
                                <th>@column</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var row in set.Rows)
                        {
                            <tr>
                                @foreach (var column in set.Columns)
                                {
                                    <td>@(row.TryGetValue(column, out var value) ? value : null)</td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        index++;
    }
    <div class="small text-muted">@Result.Message</div>
}

@code {
    [Parameter] public QueryExecutionResult? Result { get; set; }
    [Parameter] public bool IsBusy { get; set; }
}
