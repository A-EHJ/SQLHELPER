@if (IsBusy)
{
    <div class="alert alert-info d-flex align-items-center" role="alert">
        <span class="spinner-border spinner-border-sm me-2" aria-hidden="true"></span>
        <div>Executing query...</div>
    </div>
}
else if (Result is null)
{
    <div class="alert alert-secondary">Run a query to see results.</div>
}
else if (Result.Rows.Count == 0)
{
    <div class="alert alert-warning">No rows returned. @Result.Message</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-sm align-middle">
            <thead>
                <tr>
                    @foreach (var column in Result.Columns)
                    {
                        <th>@column</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Result.Rows)
                {
                    <tr>
                        @foreach (var column in Result.Columns)
                        {
                            <td>@(row.TryGetValue(column, out var value) ? value : null)</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="small text-muted">@Result.Message</div>
}

@code {
    [Parameter] public SqlQueryResult? Result { get; set; }
    [Parameter] public bool IsBusy { get; set; }
}
